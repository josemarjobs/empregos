<div class="<%= cycle("even","odd")%> vaga">
	<div class="info">
		<p><%= vaga.updated_at.to_date.to_formatted_s(:long) %></p>
		<p>Cid.: <%= vaga.cidade %></p>
		<p>
			<% if vaga.perfil.nome == "Todos" %>
			<b>Vaga para <%= vaga.perfil.nome %></b>
			<% else %>
			<b><%= vaga.perfil.nome %></b>
			<% end %>
		</p>
	</div>
	<div class="detalhes">
		<p class="titulo_vaga"><%=vaga.vaga%>
			<% if can_edit_dados(vaga.empresa_id) %>			
			<span class="right">
				<%= link_to "FINALIZAR", vaga, :method=>:delete, 
					:confirm =>"Tem certeza que deseja eliminar a vaga?", :class=>"titulo_vaga" %>|
				<%= link_to "EDITAR", edit_vaga_path(vaga), :class=>"titulo_vaga" %>
			</span>
			<% end %>
		</p>
		<p><%= vaga.vaga_curta %></p>
	</div>
</div>

