<div id="centro_cabecalho">
	<div id="logo">
		<h1>
			<%= link_to (image_tag 'logo.png', :alt=>"Logo"), root_url %>
		</h1>	
	</div>
	<div id="nav_bar" class="round">
		<ul>			
			<li><%= link_to 'Home', root_url %></li>
			<li><%= link_to 'Anunciar', anunciar_url,:class=>'borda' %></li>
			<li><a href="como_funciona.html" class="borda">Como Funciona</a></li>

				<% if current_user %>
					<li><%= link_to 'Meus Dados', meus_dados_path, :class=>'borda' %></li>
					<li><%= link_to 'LogOut', log_out_path,:class=>'borda' %></li>
				<% else %>
					<li><%= link_to 'Login', log_in_path, :class=>'borda' %></li>
				<% end %>
			</li>					
		</ul>				
	</div>

	<div class="clear"></div>
</div>
<div id="barra_horizontal">
	<%= render :partial=>"pages/barrahorizontal" %>
</div>
