<div id="vagas"> 
	<h1 class="vagas_recentes">Vagas para <%= params[:term]%></h1>
	<p class="paginacao">
		<%= paginate @vagas%>
	</p>
		<% if @vagas.size > 0 %>
			<%=render @vagas %>
		<% else %>
			<p class="vaga_nao_encontrada">Desculpe, nenhuma vaga relacionada foi encontrada!!!</p>
			<p class="vaga_nao_encontrada_info">Por favor, tente outro nome.</p>
		<% end %>

	<p class="paginacao">
		<%= paginate @vagas %>
	</p>
</div>

